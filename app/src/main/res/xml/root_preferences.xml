<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- do not move to another directory -->

    <PreferenceCategory app:title="@string/sync_header">

        <SwitchPreferenceCompat
            app:key="notifications2"
            app:summaryOff="Don't receive notification"
            app:summaryOn="Receive notification at 12:00"
            app:title="@string/langage_mode" />
    </PreferenceCategory>

    <SeekBarPreference
        app:key="zoom"
        app:title="Zoom"
        app:defaultValue="12"
        app:min="10"
        android:max="15"
        app:showSeekBarValue="true"
        />


</PreferenceScreen>