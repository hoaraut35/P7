<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.DetailRestaurant">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.37">

            <ImageView
                android:id="@+id/background_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_table">

            </ImageView>


        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.14"
            android:background="#FF5622"
            android:padding="10dp">

            <TextView
                android:id="@+id/restaurant_titre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Le Zinc"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent" />


            <TextView
                android:id="@+id/restaurant_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="French restaurant"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/restaurant_titre" />

            <TextView
                android:layout_width="210dp"
                android:layout_height="23dp"
                android:text="12 rue de Faubourg Poissoniere"
                app:layout_constraintLeft_toRightOf="@+id/restaurant_type"
                app:layout_constraintTop_toTopOf="@id/restaurant_type" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.14"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/call"
                    android:layout_width="48dp"
                    android:layout_height="78dp"
                    android:src="@drawable/ic_baseline_call_24"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/start"

                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="22dp" />

                <ImageView
                    android:id="@+id/like"
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:src="@drawable/ic_baseline_star_24"
                    app:layout_constraintLeft_toRightOf="@+id/call"
                    app:layout_constraintRight_toLeftOf="@+id/website"

                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="29dp" />

                <ImageView
                    android:id="@+id/website"
                    android:layout_width="70dp"
                    android:layout_height="61dp"
                    android:src="@drawable/ic_baseline_account_balance_24"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="39dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.34"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scarlett is joining !" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hugh is joining!" />


        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/colorPrimary"
        app:layout_anchor="@id/background_image"
        app:layout_anchorGravity="bottom|right">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>


</androidx.coordinatorlayout.widget.CoordinatorLayout>