<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/nameOfRestaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:text="Le Zinc"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/addressOfRestaurant"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"

        android:text="French - 12 rue du Faubourg PoissoniÃ¨re" />

    <TextView
        android:id="@+id/list_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:text="Open until 7pm"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/distanceOfRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="100m"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageOfRestaurant"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_logout" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>