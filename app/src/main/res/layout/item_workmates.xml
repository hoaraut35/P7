<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/workMateAvatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginVertical="8dp"
        android:contentDescription="TODO"
        android:src="@drawable/ic_logout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/workMateName"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/workMateName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"

        android:text="Scarlett"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@id/workMateAvatar"
        app:layout_constraintLeft_toRightOf="@+id/workMateAvatar"
        app:layout_constraintTop_toTopOf="@id/workMateAvatar" />


    <TextView
        android:id="@+id/workmateState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/is_eating_txt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/workMateAvatar"
        app:layout_constraintLeft_toRightOf="@id/workMateName"
        app:layout_constraintTop_toTopOf="@id/workMateAvatar" />

    <TextView
        android:id="@+id/workmateRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@id/workMateAvatar"
        app:layout_constraintLeft_toLeftOf="@id/workMateName"

        app:layout_constraintTop_toBottomOf="@id/workMateName" />


</androidx.constraintlayout.widget.ConstraintLayout>