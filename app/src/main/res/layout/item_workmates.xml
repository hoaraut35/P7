<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/workMateAvatar"
        android:layout_width="65dp"
        android:layout_height="65dp"

        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_logout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/workMateName"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/workMateName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Scarlett"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@id/workMateAvatar"
        app:layout_constraintLeft_toRightOf="@+id/workMateAvatar"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" is eating (Le Zinc)"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/workMateName"
        app:layout_constraintTop_toTopOf="@id/workMateName" />

</androidx.constraintlayout.widget.ConstraintLayout>