<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Style de base -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Style de base -->
    <style name="AppTheme.NotTitle" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="actionBarTheme">@null</item>
    </style>


    <style name="FirebaseUI" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FirebaseUI.AuthMethodPicker.Logo">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">24dp</item>
    </style>

    <!-- Style for authentification form -->
    <style name="LoginTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:textColor">#757575</item>
        <item name="android:windowBackground">@drawable/go4lunch_sign_in_background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>


    <!-- design for image restaurant detail -->
    <style name ="Restaurant_detail_img">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name ="layout_constraintTop_toTopOf">parent</item>
    </style>

    <!-- design for txt image restaurant detail -->
    <style name ="Restaurant_detail_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name ="layout_constraintBottom_toBottomOf">parent</item>

    </style>

</resources>